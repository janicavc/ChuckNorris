
<!DOCTYPE html>
<html>
  <head>
    <title>Chuck Norris Joke Generator</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body class="container">
    <h1>
      Chuck Norris Joke Generator
    </h1>
    <div class="row">
      <div>
        <h3>Categories:</h3>
        <form action="/" method="GET">
          <% categories.forEach(function(jokeCategory) { %>
            <div class="radio">
              <label>
                <% const checked = jokeCategory === 'animal' %>
                <input type="radio" name="category" value="<%= jokeCategory %>" <%= checked && 'checked' %> >
                <%= jokeCategory %>
              </label>
            </div>
          <% }) %>
          <button class="btn btn-info" type="submit">
            Generate a Chuck Norris Joke
          </button>
        </form>
      </div>
    </div>
    <div class="row">
      <div>
      <h4><%= category %></h4>
      <h5 class="alert alert-info">
        <strong><%= joke %></strong>
      </h5>
      </div>
    </div>
  </body>
</html>